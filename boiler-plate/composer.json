{
    "autoload": {
        "psr-4": {
            "${namespace}\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "${namespace}\\Tests\\": "tests/BW"
        }
    },
    "name": "${projectName}",
    "require": {
        "kshabazz/slib": "dev-master",
        "kshabazz/whip": "dev-master",
        "mongodb/mongodb": "^1.0",
        "monolog/monolog": "^1.0",
        "php": ">=7.0",
        "psr/log": "^1.0",
        "psr/http-message": "^1.0",
        "siriusphp/upload": "^2.0",
        "slim/slim": "^3.0",
        "twig/twig": "^2.0",
        "webuni/commonmark-twig-renderer": "^0.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "squizlabs/php_codesniffer": "^2.0",
        "phpmd/phpmd": "^2.0"
    },
    "scripts": {
        "units": "phpunit",
        "pcs": "phpcs -p --standard=PSR2 --severity=8 --colors src",
        "pmd": "phpmd src text cleancode --strict"
    }
}
